# Rita SMS Survey Platform - Production Environment Variables

# Application
NODE_ENV=production
PORT=3001
BUSINESS_NAME="Your Business Name"

# AWS Configuration (optional)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=

# Database (optional - app can run without DB)
# MongoDB Atlas example:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rita?retryWrites=true&w=majority

# Twilio SMS Service (required for SMS features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Security
# Use long, strong secrets in real environments
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key!!

# Logging
LOG_LEVEL=info
CLOUDWATCH_LOG_GROUP=

# Performance
MAX_FILE_SIZE=10485760
REQUEST_TIMEOUT=30000

# Feature Flags
DEBUG_SMS=false
ENABLE_WEBHOOKS=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
